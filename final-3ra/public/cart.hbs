<div class="cart_section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="cart_container">
                    <div class="cart_title">Carrito de compras</div>

                    {{#each products}}
                    <div class="cart_items">
                        <ul class="cart_list">
                            <li class="cart_item clearfix">
                                <div class="cart_item_image"><img src="/images/{{this.thumbnail}}" class="cart_item_image">
                                </div>
                                <div class="cart_item_info d-flex flex-md-row flex-column justify-content-between">
                                    <div class="cart_item_name cart_info_col">
                                        <div class="cart_item_title">Producto</div>
                                        <div class="cart_item_text">{{this.title}}</div>
                                    </div>
                                    <div class="cart_item_price cart_info_col">
                                        <div class="cart_item_title">Desc</div>
                                        <div class="cart_item_text">{{this.desc}}</div>
                                    </div>
                                    <div class="cart_item_color cart_info_col">
                                        <div class="cart_item_title">Categoria</div>
                                        <div class="cart_item_text">{{this.category}}</div>
                                    </div>
                                    <div class="cart_item_quantity cart_info_col">
                                        <div class="cart_item_title">Cantidad</div>
                                        <div class="cart_item_text">{{this.quantityInCart}}</div>
                                    </div>
                                    <div class="cart_item_total cart_info_col">
                                        <div class="cart_item_title">Precio Unitario</div>
                                        <div class="cart_item_text">${{this.price}}</div>
                                    </div>
                                    <div class="cart_item_total cart_info_col">
                                        <div class="cart_item_title">Quitar</div>
                                        <div class="cart_item_text">
                                            <form method="POST"
                                                action="/carrito/{{../cartId}}/productos/{{this._id}}?_method=DELETE">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <button type="submit" class="btn btn-outline-danger">X</button>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                    {{/each}}


                    <div class="order_total">
                        <div class="order_total_content text-md-right">
                            <div class="order_total_title">Orden Total:</div>
                            <div class="order_total_amount">${{totalOrder}}</div>
                        </div>
                    </div>

                    <form style='float: right; margin: 10px;' action="/productos" method="get">
                        <button type="submit" class="button cart_button_clear">Seguir Comprando</button>
                    </form>

                    <form style='float: right; margin: 10px;' action="/carrito/confirmation" method="post">
                        <input type="hidden" name="products" value={{productsString}} />
                        <input type="hidden" name="totalOrder" value={{totalOrder}} />
                        <input type="hidden" name="username" value={{username}} />
                        <input type="hidden" name="email" value={{email}} />
                        <input type="hidden" name="cartId" value={{cartId}} />
                        <button type="submit" class="button cart_button_checkout">Confirmar Compra</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>