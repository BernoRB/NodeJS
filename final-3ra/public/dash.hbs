<div class="container mb-5 mt-5">
    <div class="row">
        {{#each products}}
        <div class="col-md-3">
            <div class="card mt-3 border">
                <div class="align-items-center text-center">
                    <img src="{{this.thumbnail}}" class="rounded" width="160">
                    <h5>{{this.title}}</h5>
                    <div class="mt-3 info">
                        <span class="text1 d-block">{{this.desc}}</span>
                    </div>
                    <div class="cost mt-3 text-dark">
                        <span>${{this.price}}</span>
                    </div>
                    <div class="p-3 bg-danger text-center text-white mt-3">
                        <span class="text-uppercase">Add to cart</span>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>












