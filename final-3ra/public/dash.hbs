<div class="container m-3">
    <div class="row">
        <div class="bg-light rounded d-flex">
            <h3 class="col-md-6">Bienvenido {{username}}, {{email}}</h3>
            <div class="col-md-2"></div>
            <div class="col-md-2"></div>
            <a class="col-md-2 btn btn-primary" href="/logout">Logout</a>
        </div>
    </div>
</div>


<div class="container m-3">
    <div class="bg-light rounded">

    <h3>Lista de Productos</h3>
    <div id="divProds">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Titulo</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Thumbnail</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{this.title}}</th>
                    <td>{{this.desc}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.price}}</td>
                    <td> <img src="{{this.thumbnail}}" alt="{{this.title}}" width="40px"></td>
                </tr>
                {{/each}}
            </tbody>
        </table>


    </div>

</div>