{{> navbar}}

<div class="wrapper bg-white mt-sm-5">
    <h4 class="pb-4 border-bottom">{{username}}</h4>
    <div class="d-flex align-items-start py-3 border-bottom">
        <img src="{{avatar}}"
            class="img" alt="">
        <div class="pl-sm-4 pl-2" id="img-section">
            <b>Foto de perfil</b>
        </div>
    </div>
    <div class="py-2">
        <div class="row py-2">
            <div class="col-md-6">
                <p>Nombre: <b>{{name}}</b></p>
            </div>
            <div class="col-md-6 pt-md-0 pt-3">
                <p>Email: <b>{{email}}</b></p>
            </div>
        </div>
        <div class="row py-2">
            <div class="col-md-6">
                <p>Direccion: <b>{{address}}</b></p>
            </div>
            <div class="col-md-6 pt-md-0 pt-3">
                <p>Edad: <b>{{age}}</b></p>
            </div>
        </div>
        <div class="row py-2">
            <div class="col-md-6">
                <p>Phone: <b>{{phone}}</b></p>
            </div>
        </div>

