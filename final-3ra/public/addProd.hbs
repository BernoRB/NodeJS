<div class="container m-3">
    <div class="bg-light rounded">
        <h3>Cargar nuevo producto:</h3>
        <form id="formProds" action="addProd" enctype="multipart/form-data" method="POST">
            <div class="mb-3">
                <label for="title" class="fw-bold form-label">Nombre</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Ingrese el nombre"
                    required>
            </div>
            <div class="mb-3">
                <label for="price" class="fw-bold form-label">Precio</label>
                <input type="number" class="form-control" id="price" name="price" placeholder="Ingrese el precio"
                    required>
            </div>
            <div class="mb-3">
                <label for="thumbnail" class="fw-bold form-label">Descripcion</label>
                <input type="text" class="form-control" id="thumbnail" name="desc" placeholder="Ingrese la descripción">
            </div>
            <div class="mb-3">
                <label for="thumbnail" class="fw-bold form-label">Imagen</label>
                <input type="file" class="form-control" id="thumbnail" name="thumbnail"
                    placeholder="Foto del producto">
            </div>
            <div class="mb-3">
                <label for="thumbnail" class="fw-bold form-label">Categoria</label>
                <input type="text" class="form-control" id="thumbnail" name="category" placeholder="Ingrese el código">
            </div>
            <div class="mb-3">
                <label for="thumbnail" class="fw-bold form-label">Stock</label>
                <input type="text" class="form-control" id="thumbnail" name="stock" placeholder="Ingrese el stock">
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
    <br><br>
    <hr>
</div>