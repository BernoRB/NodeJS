{{> navbar}}

<div class="wrapper bg-white mt-sm-5">
    <h4 class="pb-4 border-bottom">Informacion</h4>

    <div class="py-2">
        <div class="row py-2">
            <div class="col-md-6 pt-md-0 pt-3">
                <p>User: <b>{{username}} ({{email}})</b></p>
            </div>
            <div class="col-md-6">
                <p>Platform: <b>{{platform}}</b></p>
            </div>
        </div>
        <div class="row py-2">
            <div class="col-md-6">
                <p>Puerto: <b>{{port}}</b></p>
            </div>
            <div class="col-md-6 pt-md-0 pt-3">
                <p>Database: <b>{{databaseUrl}}</b></p>
            </div>
        </div>
        <div class="row py-2">
            <div class="col-md-6">
                <p>Mail admin: <b>{{adminmail}}</b></p>
            </div>
            <div class="col-md-6 pt-md-0 pt-3">
                <p>Cookie maxage: <b>{{cookietime}}ms</b></p>
            </div>
        </div>
        <div class="row py-2">
            <div class="col-md-6">
                <p>Process id: <b>{{pid}}</b></p>
            </div>
            <div class="col-md-6 pt-md-0 pt-3">
                <p>Memory: <b>{{memory}}</b></p>
            </div>
        </div>
        <div class="row py-2">
            <div class="col-md-6">
                <p>Node Version: <b>{{nodeVersion}}</b></p>
            </div>
            <div class="col-md-6 pt-md-0 pt-3">
                <p>Q Cpus: <b>{{qCpus}}</b></p>
            </div>
        </div>
    </div>
</div>