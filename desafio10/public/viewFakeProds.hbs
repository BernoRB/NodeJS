{{#if hasProds}}
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Thumb</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.price}}</td>
          <td>
            <img
              src="{{this.thumbnail}}"
              width="40px"
            /></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="alert alert-primary" role="alert">
    Aun no hay productos, ¡agregá!
  </div>
{{/if}}