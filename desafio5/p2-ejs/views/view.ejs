<div class="container mt-3">
    <h1>Todos los productos</h1>
    <% if(qProducts){ %>
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                </tr>
                <% products.forEach(function(product){ %>
                    <tr>
                        <td>
                            <%=product.name%>
                        </td>
                        <td>
                            <%=product.price%>
                        </td>
                        <td><img width="50px" class="img-fluid img-thumbnail" src=<%=product.thumbnail%>></td>
                    </tr>
                    <% }) %>
            </table>
        </div>
        <% } else{ %>
            <h2 class="alert alert-info">No hay productos!</h3>
                <% } %>
                    <a href="/" type="button" class="btn btn-primary">Cargar producto</a>
</div>